@{
    ViewBag.Title = "统测列表";
}
@using Microsoft.AspNet.Identity;
@using HOPU.Models
@using X.PagedList.Mvc;
@using X.PagedList
@model GetUserType
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<div class="page-title row text-center">
    <h2>@ViewBag.Title</h2>
</div>
<div>
    <ul class="breadcrumb" style="width:250px">
        <li><a href="~/SysHome/Home">首页</a></li>
        <li class="active">测试中心</li>
        <li class="active">@ViewBag.Title</li>
    </ul>
</div>
@if (GetUserType.GetUserTypeInfo(User.Identity.GetUserId()))//如果是admin
{
    <script src="~/Scripts/UnifiedTestType.js"></script>
    <button class="btn btn-success" data-toggle="modal" data-target="#myModal">
        发布统测
    </button>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"
                            aria-hidden="true">
                        ×
                    </button>
                    <h4 class="modal-title text-center" id="myModalLabel">
                        请选择题目类别
                    </h4>
                </div>
                <div class="modal-body">
                    @using (Ajax.BeginForm("AddTest", "SysHome",
                        new AjaxOptions()
                        {
                            HttpMethod = "post",
                            InsertionMode = InsertionMode.Replace,
                            OnSuccess = "formSuccess",
                            OnFailure = "formFailure"
                        }))
                    {
                        @Html.AntiForgeryToken();
                        int i = 1;
                        <div class="modal-content" style="padding:35px;height:350px;">
                            @foreach (var item in ViewBag.topictype)
                            {

                                <div>
                                    <label class="checkbox-inline" name="submitlable" for="Checkbox_@i" style="float:left;width:160px;">
                                        <input type="checkbox" title="@item.CourseName" id="Checkbox_@i" name="submitCheckbox" value="@item.CourseId">@item.CourseName
                                    </label>
                                </div>
                                i++;
                            }
                        </div>
                        <div style="position:relative;margin:20px;">
                        </div>
                        <div class="modal-footer">
                            @*@Html.DisplayNameFor(c => c.TimeLenth)
                                @Html.TextBoxFor(c => c.TimeLenth)
                                @Html.ValidationSummary("", new { @class = "text-danger" })*@
                            <label style="margin-right:10px;">时长：<input type="number" name="timeLenth" title="时长" class="form-control" value="60" placeholder="必填" style="width:80px" /></label>
                            <label style="margin-right:10px;">题数：<input type="number" name="topicCount" title="题数" class="form-control" value="50" placeholder="必填" style="width:80px" /></label>
                            <button type="button" class="btn btn-danger"
                                    data-dismiss="modal">
                                关闭
                            </button>
                            <input type="submit" class="btn btn-success" id="addTest" title="提交" />
                        </div>
                    }
                    <div id="failure" class="alert alert-danger" style="display:none">错误！请不要有任何遗漏。</div>
                    <div id="error" class="alert alert-danger" role="alert" style="display:none">

                    </div>
                </div>
            </div>
        </div>
    </div>
}
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th class="text-left">序号</th>
            <th class="text-center">开始时间</th>
            <th class="text-center">时长(分)</th>
            <th class="text-center">题数</th>
            <th class="text-center">种类</th>
            <th class="text-center">状态</th>
            <th class="text-right ">选项</th>
        </tr>
    </thead>
    <tbody>
        @{
            bool adminFlag = false;
            if (GetUserType.GetUserTypeInfo(User.Identity.GetUserId()))//如果是admin
            {
                adminFlag = true;
            }
            foreach (var i in ViewBag.uniteTest)
            {
                DateTime endTime = Convert.ToDateTime(i.StartTime);
                <tr>
                    <td class="text-left">@i.UtId</td>
                    <td class="text-center">@i.StartTime</td>
                    <td class="text-center">@i.TimeLenth</td>
                    <td class="text-center">@i.TopicCount</td>
                    <td class="text-center">@i.CourseName</td>
                    @if (endTime.AddMinutes(i.TimeLenth) > DateTime.Now)//如果结束时间大于当前时间
                    {
                        <td class="text-success text-center">
                            <span class="glyphicon glyphicon-ok" style="color: rgb(0, 154, 0);">
                            </span>
                        </td>
                        <td class="text-right">
                            @Html.ActionLink("加入", "UnifiedTest", new { UtId = i.UtId }, new { @class = "btn btn-success btn-sm" })
                            @if (adminFlag)
                            {
                                @Ajax.ActionLink("删除", "DeleteTest",
                               new { UtId = i.UtId },
                               new AjaxOptions {
                                   HttpMethod = "post",
                                   InsertionMode = InsertionMode.Replace,
                                   OnSuccess= "deleteTest",
                                   Confirm = "确定要删除吗？",
                               },
                               new { @id="delete", @class= "btn btn-danger btn-sm" })
                            }
                        </td>
                    }
                    else
                    {
                        <td class="text-danger text-center">
                            <span class="glyphicon glyphicon-remove" style="color: rgb(255, 0, 0);"></span>
                        </td>
                        <td class="text-right ">
                            @Html.ActionLink("查看", "UnifiedTest", new { UtId = i.UtId }, new { @class = "btn btn-primary btn-sm" })
                            @if (adminFlag)
                            {
                                @Ajax.ActionLink("删除", "DeleteTest",
                               new { UtId = i.UtId },
                               new AjaxOptions {
                                   HttpMethod = "post",
                                   InsertionMode = InsertionMode.Replace,
                                   OnSuccess= "deleteTest",
                                   Confirm = "确定要删除吗？",
                               },
                               new { @id="delete", @class= "btn btn-danger btn-sm" })
                            }
                        </td>
                    }

                </tr>

            }
        }
    </tbody>
</table>
<div style="margin-left:50%">
    @Html.PagedListPager((IPagedList)ViewBag.uniteTest, page => Url.Action("UnifiedTestType", new { page }))
</div>


<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 厚溥题库</title>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/zjxd")
    @Styles.Render("~/Content/css")
</head>
<body id="body">
    <div class="navbar navbar-default " style="margin-top:-50px">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (Request.IsAuthenticated)
                {
                    @Html.ActionLink("题库", "Home", "SysHome", new { area = "" }, new { @class = "navbar-brand" })
                }
                else
                {
                    @Html.ActionLink("题库", "AdminLogin", "SysAdmin", new { area = "" }, new { @class = "navbar-brand" })
                }
            </div>
            <div class="navbar-collapse collapse">
                @if (Request.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">测试中心<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("统一测试", "UnifiedTestType", "Syshome")</li>
                                <li>@Html.ActionLink("自我测试", "#", "Syshome")</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">浏览中心<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("顺序浏览", "Allbrowse", "Syshome")</li>
                                <li>@Html.ActionLink("分类浏览", "ClassifieTypedBrowse", "Syshome")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("关于我们", "About", "Syshome")</li>
                       
                    </ul>
                }
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer style="margin-top:60px; color:gray">
            <p class="text-center">
                Copyright &copy; @DateTime.Now.Year XXX.All Rights Reserved.
            </p>
            <p class="text-center">
                <span>@*黔ICP备16006898号-1*@</span>
            </p>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
